<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alewar.jason.activities.CountryActivity"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/validation_type"
        android:text="Validation Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/country_acronym"
        android:text="CH/LI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/validation_type"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:textSize="45sp"
        android:textColor="#00217a"/>

</RelativeLayout>
