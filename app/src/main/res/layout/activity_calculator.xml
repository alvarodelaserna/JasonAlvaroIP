<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alewar.jason.activities.CalculatorActivity"
    android:background="@drawable/background2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:text="Calculator"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#f26322"/>
    <RelativeLayout
        android:id="@+id/earliest_priority_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">
        <EditText
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:textSize="25sp"
            android:maxLength="2"
            android:hint="MM"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/month"
            android:paddingTop="10dp"
            android:text="-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/month"
            android:paddingTop="10dp"
            android:text="-"/>
        <EditText
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="DD"
            android:layout_toLeftOf="@+id/month"
            android:inputType="number"
            android:maxLength="2"
            android:layout_marginRight="10dp"/>
        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/day"
            android:layout_marginRight="10dp"
            android:src="@drawable/calendar"
            android:background="@android:color/transparent"/>
        <EditText
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="YYYY"
            android:layout_toRightOf="@+id/month"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/aux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/month"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/button_calculate"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_below="@+id/month"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:layout_toLeftOf="@+id/aux"
            android:text="Calculate"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/button_reset"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_below="@+id/month"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/aux"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button"
            android:text="Reset"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earliest_priority_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/time_limit"
            android:text="@string/time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>
        <GridLayout
            android:id="@+id/top_three"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/time_limit"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:rowCount="3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="20 months"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/twenty_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="DATE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="30 months"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/thirty_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="DATE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="31 months"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/thirtyone_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="DATE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>

        </GridLayout>
    </RelativeLayout>

</RelativeLayout>
