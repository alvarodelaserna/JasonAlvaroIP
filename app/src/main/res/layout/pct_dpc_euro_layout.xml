                        android:id="@+id/translation_extension"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:layout_weight="0.7"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#f26322"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pct_excess_claim_fee"
                        android:layout_weight="0.3"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/excess_claim_fee_pct"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:layout_weight="0.7"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#f26322"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pct_examination_request"
                        android:layout_weight="0.3"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/examination_request_pct"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:layout_weight="0.7"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#f26322"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dpc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pct">
            <TextView
                android:id="@+id/validation_type_dpc"
                android:text="Direct (Paris Convention) filing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="30sp"
                android:textColor="#f26322"/>

            <TextView
                android:id="@+id/country_acronym_dpc"
